                    .gem-wiki__slider-item
                        a(href="#").gem-wiki__slider-linc
                            img(src="./assets/images/gem-wiki-topaz-min.png", srcset="assets/images/gem-wiki-topaz@2x-min.png 2x" alt="Виды сертификации на драгоценные камни").gem-wiki__slider-img
