extends ../template

block variables
    - var title = 'Услуги и цены'
    - var contactForm = true

block content
    main
        include ../components/bread-crumbs.pug

        h1.heading-1.heading-under-bread-crumbs Услуги и цены

        .calculator
            .calculator__head
                h2.heading-2.calculator__head-heading Сертификация
                .calculator__head-booton-wrap
                        button.button.calculator__head-booton Бриллианты
                        button.button.button_hgost-neutral.calculator__head-booton Ювелирные изделия
                        button.button.button_hgost-neutral.calculator__head-booton Драгоценные камни
            
            .calculator__body
                .calculator__tab-wrap
                    botton.calculator__tab-item
                        img(src="./assets/images/calculator-rect-min.png", srcset="assets/images/calculator-rect@2x-min.png 2x" alt="Бесцветные бриллианты").calculator__tab-img
                        span.calculator__tab-text Бесцветные бриллианты
                    botton.calculator__tab-item.calculator__tab-activ
                        img(src="./assets/images/calculator-color-min.png", srcset="assets/images/calculator-color@2x-min.png 2x" alt="Цветные бриллианты").calculator__tab-img
                        span.calculator__tab-text Цветные бриллианты

                .calculator__main
                    .calculator__main-head
                        .calculator__main-name
                            img(src="./assets/images/calculator-color-min.png", srcset="assets/images/calculator-color@2x-min.png 2x" alt="Цветные бриллианты").calculator__main-name-img
                            h4.calculator__main-name-text Цветные бриллианты
                        
                        .input_select.calculator__main-head-input
                            select(placeholder="Название камня").input
                                option(value="1") Название камня 1
                                option(value="2") Название камня 2
                                option(value="3") Название камня 3
                    
                    .calculator__main-body
                        .calculator__tuning-wrap
                            .calculator__tuning-item
                                .calculator__tuning-karat
                                    span.calculator__tuning-karat-name Масса, кар.
                                    input(type="text" value="0.8").calculator__tuning-karat-number
                                .calculator__tuning-input-wrap
                                    input(type="range" min="0.05" max="15" step="0.01" value="0.8").calculator__tuning-input
                                    .calculator__tuning-input-max-min
                                        span 0.05
                                        spna +15
                        
                            .calculator__radio-wrap
                                label.calculator__radio-label
                                    input(type="radio", name="calculator").calculator__radio
                                    span.calculator__radio-text Экспертное заключение
                                label.calculator__radio-label
                                    input(type="radio", name="calculator" checked).calculator__radio
                                    span.calculator__radio-text Экспертное заключение
                                    span.calculator__radio-text-b Без выдачи экспертного заключения

                        .calculator__price-wrap
                            .calculator__price-text-wrap
                                span.calculator__price-text Общая стоимость
                                span.calculator__price-number 1 700 
                                    spna.calculator__price-rub руб.
                            
                            .calculator__price-button-wrap
                                button.button.calculator__price-button Заказать сертификат
                                a(href="#").calculator__price-linc Пример



        //- Индивидуальная упаковка
        article.packaging
            h2.heading-1.packaging__heading Индивидуальная упаковка
            .packaging__content
                .packaging__content-text-wrap
                    p.packaging__content-text Упаковка ограненного камня представляет собой пластиковый блистер с голограммой, обладающей шестнадцатью степенями защиты.
                    p.packaging__content-text При вскрытии или нарушении целостности упаковки голограмма разрушается. Это свойство защищает запакованный камень от подмены.
                    span.packaging__content-prise Общая стоимость <span class="packaging__content-prise-number">500</span> руб.
                .packaging__content-img-wrap
                    img(src="./assets/images/packaging-2-min.png", srcset="assets/images/packaging-2@2x-min.png 2x" alt="Индивидуальная упаковка").packaging__content-img
                    img(src="./assets/images/packaging-1-min.png", srcset="assets/images/packaging-1@2x-min.png 2x" alt="Индивидуальная упаковка").packaging__content-img
